<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header with Shield Icon -->
        <ImageView
            android:id="@+id/icon_app_shield"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_shield_check"
            android:contentDescription="@string/cd_call_protection_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/text_app_title" />

        <TextView
            android:id="@+id/text_app_title"
            style="@style/AppText.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="@color/dark_text_primary"
            app:layout_constraintStart_toEndOf="@+id/icon_app_shield"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_call_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color"
            app:layout_constraintBottom_toBottomOf="@+id/text_app_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_app_title" />

        <!-- Permissions Card -->
        <LinearLayout
            android:id="@+id/permissions_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_app_title">

            <!-- Using shield check icon for permission status -->
            <TextView
                android:id="@+id/permission_status_text"
                style="@style/AppText.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/permissions_granted"
                app:drawableStartCompat="@drawable/ic_shield_check" />

            <TextView
                android:id="@+id/permission_status_description"
                style="@style/AppText.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/permissions_granted_description"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_grant_permission"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/grant_permission_button"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Explanation -->
        <TextView
            android:id="@+id/text_explanation"
            style="@style/AppText.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/explanation"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/permissions_card" />

        <TextView
            android:id="@+id/text_schedule_guidance"
            style="@style/AppText.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/schedule_guidance"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_explanation" />

        <!-- Reset Data Card - Using compound drawable -->
        <LinearLayout
            android:id="@+id/reset_data_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/card_background_warning"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_schedule_guidance">

            <TextView
                style="@style/AppText.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/reset_data_title"
                android:textColor="@color/color_warning"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_delete_sweep" />

            <TextView
                style="@style/AppText.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/reset_data_description"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_reset_data"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/reset_data_button"
                android:textColor="@color/color_warning"
                app:cornerRadius="8dp"
                app:strokeColor="@color/color_warning" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
