<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogFragment">

    <!-- Header with blocked call icon -->
    <ImageView
        android:id="@+id/icon_blocked_log"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_call_blocked"
            android:contentDescription="@string/cd_blocked_calls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_log_title"
        style="@style/AppText.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:paddingStart="0dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:text="@string/blocked_call_log"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/icon_blocked_log"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_log_subtitle"
        style="@style/AppText.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:text="@string/log_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_log_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_log_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
