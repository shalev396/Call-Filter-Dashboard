<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- Classic Phone Handset - Clean Design -->
    <group
        android:pivotX="54"
        android:pivotY="54"
        android:rotation="-30">
        
        <!-- Phone shadow -->
        <path
            android:pathData="M38,42 
                C38,38 41,35 45,35
                L63,35
                C67,35 70,38 70,42
                L70,66
                C70,70 67,73 63,73
                L45,73
                C41,73 38,70 38,66
                L38,42z"
            android:fillColor="#15000000"/>
        
        <!-- Phone body -->
        <path
            android:pathData="M36,40 
                C36,36 39,33 43,33
                L61,33
                C65,33 68,36 68,40
                L68,68
                C68,72 65,75 61,75
                L43,75
                C39,75 36,72 36,68
                L36,40z"
            android:fillColor="#FFFFFF"/>
        
        <!-- Phone screen -->
        <path
            android:pathData="M40,42
                C40,40 41.5,38 44,38
                L60,38
                C62.5,38 64,40 64,42
                L64,62
                C64,64 62.5,66 60,66
                L44,66
                C41.5,66 40,64 40,62
                L40,42z"
            android:fillColor="#1E293B"/>
        
        <!-- Screen glare -->
        <path
            android:pathData="M42,40 L44,40 L44,52 L42,52z"
            android:fillColor="#30FFFFFF"/>
        
        <!-- Phone speaker -->
        <path
            android:pathData="M48,35.5 L56,35.5"
            android:strokeWidth="1.5"
            android:strokeColor="#94A3B8"
            android:strokeLineCap="round"/>
        
        <!-- Phone home button -->
        <path
            android:pathData="M52,70 m-2,0 a2,2 0 1,1 4,0 a2,2 0 1,1 -4,0"
            android:fillColor="#94A3B8"/>
            
    </group>
    
    <!-- Block/Filter Circle - Bottom Right -->
    <path
        android:pathData="M72,68 m-14,0 a14,14 0 1,1 28,0 a14,14 0 1,1 -28,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="58"
                android:startY="54"
                android:endX="86"
                android:endY="82"
                android:type="linear">
                <item android:offset="0.0" android:color="#FFEF4444"/>
                <item android:offset="1.0" android:color="#FFDC2626"/>
            </gradient>
        </aapt:attr>
    </path>
    
    <!-- Block symbol - diagonal line through circle -->
    <path
        android:pathData="M63,59 L81,77"
        android:strokeWidth="3"
        android:strokeColor="#FFFFFF"
        android:strokeLineCap="round"/>
    
    <!-- Small clock/schedule indicator - Top right of phone -->
    <path
        android:pathData="M70,32 m-8,0 a8,8 0 1,1 16,0 a8,8 0 1,1 -16,0"
        android:fillColor="#22D3EE"/>
    
    <!-- Clock hands -->
    <path
        android:pathData="M70,32 L70,28"
        android:strokeWidth="1.5"
        android:strokeColor="#FFFFFF"
        android:strokeLineCap="round"/>
    <path
        android:pathData="M70,32 L73,32"
        android:strokeWidth="1.5"
        android:strokeColor="#FFFFFF"
        android:strokeLineCap="round"/>
    
    <!-- Clock center dot -->
    <path
        android:pathData="M70,32 m-1,0 a1,1 0 1,1 2,0 a1,1 0 1,1 -2,0"
        android:fillColor="#FFFFFF"/>
    
</vector>
